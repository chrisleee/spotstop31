
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Intro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <style>
        #getStarted:hover{
            color:blue;
        }
        #getStarted {
            text-decoration:none;
            cursor:pointer
        }
    </style>
</head>
<body style="background-image:url(../../Content/cars.jpg); background-size:cover; width:100vw; height:100vh">
    <div > 
        <div class="navbar navbar-inverse navbar-fixed-top" style="margin:0px">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("SpotStop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Find Spot", "Index", "Home")</li>
                        <li>@Html.ActionLink("Offer Spot", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>

                </div>
            </div>
        </div>
        <div class="" >

            <div style="text-align:center; vertical-align:central; margin:0; opacity:.75; border-color:white; background-color:white; height:25%; width:35%; border-radius:3px; left:35%;  top:40%;position:absolute">
            <h2 style="font-size:48px">SpotStop</h2><h3>Your one stop shop to spot a stop.<br /><a id="getStarted" href="~/Views/Home/Index.cshtml">Get Started</a> <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span></h3></div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")


</body>
</html>









